body {
    .tesseradrag {
        display: inline-block;
        width: 40px;
        cursor: pointer;
    }
    > .tessera {
        width: 55px;
        height: 55px;
        display: block;
        overflow: hidden;
        img {
            width: 100%;
        }
    }
}

#step3 {
    background-color: #FFFFFF;
    min-height: 600px;
    margin-bottom: 300px;
    .tessera_base, .tessera_base_dark {
        position: relative;
        display: block;
        float: left;
        width: 60px;
        height: 109px;
        margin-top: 0px;
        background-image: url('../img/bracciale/j/skin/tessera_base.png');
        background-repeat: no-repeat;
        background-size: cover;
        box-sizing: border-box;
        overflow: visible !important;
    }
    #fixed_bracciale {
        position: relative;
        z-index: 99;
        margin-top: 200px;
        #container_bracciale {
            // position: absolute;
            font-size: 0;
            display: inline-block;
            // top: 198px;
            width: 100%;
            text-align: center;
            // padding: 0px 10px 10px;
            margin-bottom: 50px;
            background: url('../img/ombra.png') bottom 38px center no-repeat;
            height: 131px;
            .locate {
                height: 42px;
                position: relative;
                top: 9px;
                display: inline-block;
                &.locate-start {
                    background: url('../img/locate1.png') no-repeat;
                    width: 34px;
                }
                &.locate-end {
                    width: 18px;
                    background: url('../img/locate2.png') no-repeat;
                }
            }
            #bracciale {
                position: relative;
                display: inline-block;
                vertical-align: top;
                text-align: center;
                height: 131px;
                .tesserabracciale {
                    position: absolute;
                    display: block;
                    width: 50px;
                    height: 50px;
                    top: 4px;
                    left: -30px;
                    background-image: none;
                    background-repeat: no-repeat;
                    background-size: cover;
                    background-position: center top;
                }
                .handletessera {
                    position: absolute;
                    left: 2px;
                    top: 0px;
                    width: 60px;
                    height: 109px;
                    z-index: 99;
                    cursor: pointer;
                }
            }
        }
    }
    #conf_filtro {
        clear: both;
        position: relative;
        // top: 340px;
        width: 100%;
        background: #FFFFFF;
        min-height: 350px;
        display: block;
        margin: 0px 0px 50px;
        #container_tessere {
            display: block;
            width: 100%;
            height: auto;
            text-align: left;
            padding: 0;
            background-color: #FFFFFF;
            #tessere {
                display: block;
                width: 100%;
                text-align: left;
                left: 15px;
                padding-top: 12px;
                padding-left: 34px;
                padding-bottom: 140px;
                margin-top: 45px;
                margin-bottom: 240px;
                font-size: 0;
                .tessera {
                    display: inline-block;
                    width: 55px;
                    cursor: pointer;
                    margin: 0 4px;
                    img {
                        width: 100%;
                    }
                }
            }
        }
    }
}
